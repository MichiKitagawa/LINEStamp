{
  "name": "@line-stamp/integration-tests",
  "version": "1.0.0",
  "description": "Integration tests for LINE Stamp generation system",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "emulator:start": "firebase emulators:start --only firestore --host 127.0.0.1 --port 8080",
    "emulator:exec": "firebase emulators:exec --only firestore 'npm test'"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@types/supertest": "^6.0.0",
    "jest": "^29.5.0",
    "supertest": "^6.3.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "firebase-admin": "^12.0.0",
    "express": "^4.18.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/integration/**/*.test.ts"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/setup.ts"
    ],
    "collectCoverageFrom": [
      "integration/**/*.ts",
      "!integration/**/*.test.ts"
    ]
  }
} 