{
  "name": "line-stamp-backend",
  "version": "1.0.0",
  "description": "LINEスタンプ自動生成システム - バックエンドAPI",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "deploy:staging": "gcloud run deploy line-stamp-backend-staging --source . --region=asia-northeast1",
    "deploy:prod": "gcloud run deploy line-stamp-backend-prod --source . --region=asia-northeast1"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1",
    "firebase-admin": "^12.0.0",
    "stripe": "^14.0.0",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.33.0",
    "puppeteer-core": "^21.0.0",
    "uuid": "^9.0.1",
    "joi": "^17.11.0",
    "compression": "^1.7.4",
    "express-rate-limit": "^7.1.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/uuid": "^9.0.7",
    "@types/compression": "^1.7.5",
    "@types/node": "^20.10.0",
    "@types/jest": "^29.5.8",
    "@types/supertest": "^2.0.16",
    "typescript": "^5.3.0",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.3",
    "eslint": "^8.54.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "express",
    "typescript",
    "firebase",
    "stripe",
    "puppeteer",
    "line",
    "stamp"
  ],
